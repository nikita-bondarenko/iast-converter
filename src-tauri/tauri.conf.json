{
  "build": {
    "beforeDevCommand": "npm run web:dev",
    "beforeBuildCommand": "npm run web:build",
    "devPath": "http://localhost:5173",
    "distDir": "../web/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "IAST Converter",
    "version": "0.7.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["app", "dmg"],
      "identifier": "com.example.iastconverter",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "IAST Converter",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400
      }
    ]
  }
} 